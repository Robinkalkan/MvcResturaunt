@{
    var theLandingPage = ViewData["TheLandingPage"] as bool? ?? false;
    var classLandingPage = theLandingPage ? "landing-page" : "";
    var paddingClasslandingPage = theLandingPage ? "pt-0 ps-0 p-0 pb-5" : "pb-5 pt-5";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Robins Restaurant</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>

        body {
            background-color: #2C3E50;
            color: #ECF0F1;
            font-family: 'Roboto', sans-serif;
        }

        .navbar, .footer {
            background-color: #34495E;
            color: #ECF0F1;
            border-radius: 12px;
            border: 2px solid #95A5A6;
            padding: 20px;
        }

        .navbar {
            margin: 20px auto;
            padding: 15px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 900;
            color: #F1C40F;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

            .navbar-brand:hover {
                color: #E67E22;
            }

        .navbar-nav .nav-link {
            color: #BDC3C7;
            font-weight: bold;
            transition: color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #F1C40F;
            }

        .navbar-toggler-icon {
            background-color: #E67E22;
        }

        .navbar-toggler.collapsed .custom-toggler-icon .bar {
            background-color: #F39C12;
        }

        .navbar-toggler:not(.collapsed) .custom-toggler-icon .bar {
            background-color: #F39C12;
        }

        .footer {
            text-align: center;
            margin: 20px 10px;
            padding: 20px 10px;
        }

            .footer .footer-left, .footer .footer-right {
                color: #BDC3C7;
            }

                .footer .footer-left a, .footer .footer-right a {
                    color: #BDC3C7;
                }

                    .footer .footer-left a:hover, .footer .footer-right a:hover {
                        color: #F1C40F;
                    }

        .btn-logout {
            color: #ECF0F1;
            background-color: #2C3E50;
            border-color: #F1C40F;
        }

            .btn-logout:hover {
                background-color: #F1C40F;
                color: #2C3E50;
                border-color: #2C3E50;
            }

        .footer-right .btn-admin {
            background-color: #F1C40F;
            color: #2C3E50;
            border: 2px solid #F39C12;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
        }

            .footer-right .btn-admin:hover {
                background-color: #E67E22;
                color: #ECF0F1;
                border-color: #2C3E50;
            }

        .custom-toggler-icon {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 25px;
        }

            .custom-toggler-icon .bar {
                height: 4px;
                background-color: #F39C12;
                border-radius: 2px;
                transition: 0.3s;
            }

        .container-fluid {
            padding-left: 0;
            padding-right: 0;
        }

        .navbar-collapse {
            justify-content: flex-end;
        }

        .HomePageImage {
           
            display: flex; 
            justify-content: center;
            align-items: center; 
            background-color: #2C3E50;
        }

            .HomePageImage img {
                max-width: 93%; 
                max-height: 80%; 
                border: 2px solid #ccc;
                border-radius: 10px; 
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); 
            }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover; /* Gör att bilden anpassas snyggt */
        }

        .card-body {
            text-align: center;
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            color: #333;
        }

        .card-text {
            color: #666;
            font-size: 1rem;
        }

        .card {
            text-align: center;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            }

    </style>
</head>
<body class="@classLandingPage">
    <header>
        <nav class="navbar navbar-expand-sm shadow-sm py-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="font-family: 'Merriweather', serif; font-weight: 700;" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-wine-glass-alt"></i> Robins Resturaunt
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <div class="custom-toggler-icon">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-3" asp-area="" asp-controller="Menu" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-3" href="https://www.thefork.se/restaurang/bistro-royal-r302281" target="_blank">Booking</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-logout btn-sm">Logout</button>
                                    </form>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold px-3" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid @paddingClasslandingPage">
        @RenderBody()
    </div>

    <footer class="footer py-4">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="footer-left">
                <strong> Come for the food, stay for the bad jokes!</strong>
            </div>
            <div class="footer-right">
                @if (User.Identity.IsAuthenticated)
                {
                        <a href="@Url.Action("Index", "Admin")" class="btn-admin">Admin</a>
                }
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
